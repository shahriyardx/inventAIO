// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-py"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id      BigInt @unique @default(autoincrement())
  capital Float
}

model Products {
  id       BigInt @unique @default(autoincrement())
  sku      String @unique
  name     String
  brand    String
  quantity BigInt
  Buy      Buy[]
}

model Buy {
  id       BigInt   @unique @default(autoincrement())
  price    Float
  size     String
  quantity Int
  date     DateTime

  source String?
  note   String?

  product    Products @relation(fields: [product_id], references: [id], onDelete: Cascade)
  product_id BigInt
  Sell       Sell[]
}

model Sell {
  id     BigInt @unique @default(autoincrement())
  buy    Buy    @relation(fields: [buy_id], references: [id], onDelete: Cascade)
  buy_id BigInt

  price    Float
  quantity Int
  date     DateTime

  note String?
}
