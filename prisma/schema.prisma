// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-py"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id      BigInt @unique
  capital Float
}

enum Action {
  buy
  sell
}

model Inventory {
  id           BigInt   @unique @default(autoincrement())
  shoe_name    String
  sku          String
  bought_price Float?
  sold_price   Float?
  size         String
  quantity     Int
  date         DateTime
  action       Action
}
